                                  Fill="{DynamicResource Foreground}"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="LabelState" Value="Idle">
                            <Setter TargetName="PART_IconPath" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#66FFFFFF"/>
                        </Trigger>
                        <Trigger Property="LabelState" Value="Ok">
                            <Setter TargetName="PART_IconPath" Property="Fill" Value="{DynamicResource BaseBgGreen}"/>
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{DynamicResource BaseBgGreen}"/>
                        </Trigger>
                        <Trigger Property="LabelState" Value="Warning">
                            <Setter TargetName="PART_IconPath" Property="Fill" Value="{DynamicResource BaseBgYellow}"/>
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{DynamicResource BaseBgYellow}"/>
                            <Setter TargetName="PART_Label" Property="TextBlock.Foreground" Value="{DynamicResource BaseBgYellow}"/>
                        </Trigger>
                        <Trigger Property="LabelState" Value="Error">
                            <Setter TargetName="PART_IconPath" Property="Fill" Value="{DynamicResource BaseBgRed}"/>
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{DynamicResource BaseBgRed}"/>
                            <Setter TargetName="PART_Label" Property="TextBlock.Foreground" Value="{DynamicResource BaseBgRed}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="LabelState" Value="Idle"/>
                                <Condition Property="LabelIcon" Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_Gap" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_IconPath" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="#66FFFFFF"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="LabelState" Value="Ok"/>
                                <Condition Property="LabelIcon" Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_IconPath" Property="Style" Value="{DynamicResource CheckIcon}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="LabelState" Value="Warning"/>
                                <Condition Property="LabelIcon" Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_IconPath" Property="Style" Value="{DynamicResource QuestionIcon}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="LabelState" Value="Error"/>
                                <Condition Property="LabelIcon" Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_IconPath" Property="Style" Value="{DynamicResource RemoveIcon}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type ui:StatusLabel}" BasedOn="{StaticResource StatusLabel}"/>

    <Style x:Key="Panel" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="{DynamicResource CompactRadius}"/>
        <Setter Property="Background" Value="{DynamicResource Background}"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <Style TargetType="{x:Type ui:Spinner}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:Spinner}">
                    <ControlTemplate.Resources>
                        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
                    </ControlTemplate.Resources>
                    <Ellipse StrokeThickness="3" StrokeDashArray="10 5" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stroke="{DynamicResource MainAccent}" Visibility="{TemplateBinding IsLoading, Converter={StaticResource BoolToVisibility}}" RenderTransformOrigin="0.5 0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="Spin" Angle="0"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="Spin" Storyboard.TargetProperty="Angle" From="0" To="360"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>